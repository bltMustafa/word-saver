{
    "manifest_version": 3,
    "name": "Word Saver Extension",
    "version": "1.0",
    "description": "Right-click to save unknown words.",
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://translate.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-16.png",
            "128": "icon-16.png"
        }
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-16.png",
        "128": "icon-16.png"
    }
}